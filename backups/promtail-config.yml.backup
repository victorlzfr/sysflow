server:
  http_listen_port: 9080
  grpc_listen_port: 0

positions:
  filename: /tmp/positions.yaml

clients:
  - url: http://loki:3100/loki/api/v1/push

scrape_configs:
  - job_name: system
    static_configs:
      - targets:
          - localhost
        labels:
          job: varlogs
          __path__: /var/log/*log
          host: localhost
  
  - job_name: containers
    static_configs:
      - targets:
          - localhost
        labels:
          job: containerlogs
          __path__: /var/lib/docker/containers/*/*log
          host: localhost
  
  - job_name: sysflow
    static_configs:
      - targets:
          - localhost
        labels:
          job: sysflow
          __path__: /var/log/sysflow/*.log
          host: localhost
      pipeline_stages:
      - regex:
          expression: "^(?P<log_timestamp>\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2}) - \\[?(?P<level>\\w+)\\]? - ?(?P<message>.*)"
      - timestamp:
          source: log_timestamp
          format: "2006-01-02 15:04:05"
      - labels:
          level:
